# =============================================================================
# TRIVECTOR.AI ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.local for local development
# DO NOT commit .env.local or any file containing actual secrets to git
# =============================================================================

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Node environment (development, production, test)
NODE_ENV=development

# Application URL (public-facing URL for your application)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# API Base URL (for client-side API calls)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# -----------------------------------------------------------------------------
# AI/ML Provider API Keys
# -----------------------------------------------------------------------------
# Get these from the respective provider dashboards:
# - Anthropic Claude: https://console.anthropic.com/
# - OpenAI: https://platform.openai.com/api-keys
# - Google AI: https://makersuite.google.com/app/apikey
# - HuggingFace: https://huggingface.co/settings/tokens

# Anthropic Claude API Key
ANTHROPIC_API_KEY=

# OpenAI API Key
OPENAI_API_KEY=

# Google Generative AI API Key
GOOGLE_API_KEY=

# HuggingFace API Token
HUGGINGFACE_API_KEY=

# -----------------------------------------------------------------------------
# Vercel Infrastructure (Auto-populated by Vercel in production)
# -----------------------------------------------------------------------------

# Vercel KV Database URL
KV_URL=

# Vercel KV REST API URL
KV_REST_API_URL=

# Vercel KV REST API Token
KV_REST_API_TOKEN=

# Vercel KV REST API Read-Only Token
KV_REST_API_READ_ONLY_TOKEN=

# -----------------------------------------------------------------------------
# Analytics & Monitoring
# -----------------------------------------------------------------------------

# Vercel Analytics ID (auto-populated by Vercel)
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=

# Custom analytics tracking ID (if using external service)
NEXT_PUBLIC_ANALYTICS_ID=

# Sentry DSN for error tracking (optional)
SENTRY_DSN=

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# External Services
# -----------------------------------------------------------------------------

# Python/FastAPI Service URL (for local development with docker-compose)
PYTHON_SERVICE_URL=http://localhost:8000

# Database URL (if using a database)
DATABASE_URL=

# Redis URL (if using Redis for caching/sessions)
REDIS_URL=

# -----------------------------------------------------------------------------
# Security & Authentication
# -----------------------------------------------------------------------------

# API Rate Limiting (requests per minute)
RATE_LIMIT_MAX=100

# CORS Allowed Origins (comma-separated list)
# In production, specify your actual domains instead of *
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://trivector.ai,https://*.trivector.ai

# Session secret (generate a random string for production)
SESSION_SECRET=

# JWT Secret (if using JWT authentication)
JWT_SECRET=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable experimental features
NEXT_PUBLIC_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable debug mode
NEXT_PUBLIC_DEBUG_MODE=false

# Enable API mocking for development
NEXT_PUBLIC_ENABLE_API_MOCKING=false

# -----------------------------------------------------------------------------
# Deployment Configuration
# -----------------------------------------------------------------------------

# Vercel Region (primary deployment region)
VERCEL_REGION=iad1

# Enable edge functions
ENABLE_EDGE_FUNCTIONS=false

# Build optimization
NEXT_TELEMETRY_DISABLED=0

# -----------------------------------------------------------------------------
# Development Tools
# -----------------------------------------------------------------------------

# Skip TypeScript type checking during build (not recommended for production)
SKIP_TYPE_CHECK=false

# Skip ESLint during build (not recommended for production)
SKIP_LINT=false

# Enable source maps in production (increases bundle size)
ENABLE_SOURCE_MAPS=false
