# Trivector.ai Backend Configuration

# Environment
ENV=development

# Server
PORT=8000
HOST=0.0.0.0

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# JWT Secret (generate with: openssl rand -hex 32)
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# Redis (optional - for session persistence)
REDIS_URL=redis://localhost:6379/0

# Database (optional - for user management)
DATABASE_URL=postgresql://user:password@localhost:5432/trivector

# Logging
LOG_LEVEL=INFO
